@model IEnumerable<WebAPP.Models.Candidate>



<div class="panel-heading">
    <h2 class="panel-title" style="text-align:center">Candidate Interview Deatils </h2>
    <h3 class="panel-title" style="text-align:center"> Interview Time Schedule 8:00 AM - 5:00 PM </h3>
</div>

<div class="panel-body">
    <div class="pull-right">
        <a href="@Url.Action("Create", "Candidate")" class="btn btn-success" role="button"><span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add New Candidate</a>
        &nbsp;
    </div>
    <br />

    <table class="table" style="border:double">
        <thead>
            <tr>
                <th>
                    Candidate
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Experience)
                </th>

                <th>
                    Phone Number
                </th>
                <th>
                    Available
                </th>
                <th>
                    ScheduleTime
                </th>
                <th>
                    Interviewer
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            TIO - # @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsEnable)
                        </td>

                        <td>
                            @item.StartDate  <b>-</b>  @item.EndDate
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interviewer)
                        </td>
                        <td>

                            @Html.ActionLink("AssignInterview", "Edit", new { id = item.Id, @class = "my-edit" })|
                            @Html.ActionLink("MoreInfo", "Details", new { id = item.Id, @class = "my-details" })|
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "my-delete" })
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
<style type="text/css">
    a.my-edit {
        color: green
    }

        a.my-details {
            color: blue
        }

        a.my-delete{
            color: red
        }

        a.my-class:visited {
            color: Yellow
        }
</style>